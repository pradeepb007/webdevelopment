<template>
  <div>
    <a-table :data-source="data">
      <a-column title="Publisher Name" dataIndex="Name" key="Name">
        <template slot-scope="text, record">
          <a @click="toggleRow(record)">{{ text }}</a>
        </template>
      </a-column>
      <a-column
        v-for="month in data[0].MonthsName[0]"
        :key="month"
        :title="month"
        :data-index="month"
      >
        <template slot-scope="text, record">
          <span v-if="showData[record.key]">
            {{ record.MonthsData[0][month].One }} / {{ record.MonthsData[0][month].Two }}
          </span>
        </template>
      </a-column>
    </a-table>
    <div v-for="(show, key) in showData" :key="key">
      <a-checkbox v-model="show" @change="toggleData(key)">Show Months Data</a-checkbox>
    </div>
  </div>
</template>

<script>
import { ATable, ACheckbox } from "ant-design-vue";

export default {
  components: {
    ATable,
    ACheckbox,
  },
  data() {
    return {
      data: [
        {
          key: 1,
          Name: "Test name",
          MonthsName: [["Jan", "Feb", "Mar"]],
          MonthsData: [
            [
              { One: 30, Two: 20 },
              { One: 50, Two: 30 },
              { One: 60, Two: 70 },
            ],
          ],
        },
        // Add more data objects here if needed
      ],
      showData: {},
    };
  },
  methods: {
    toggleRow(record) {
      this.$set(this.showData, record.key, !this.showData[record.key]);
    },
    toggleData(key) {
      // Handle checkbox change to show/hide data
    },
  },
};
</script>
